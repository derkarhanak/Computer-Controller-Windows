<Page
    x:Class="ComputerController.Views.ComputerControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="24,16,24,12" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE7F8;" FontSize="28" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Computer Controller" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Text="Control your Windows PC with natural language" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Section -->
                <StackPanel Grid.Column="1" Spacing="8" HorizontalAlignment="Right">
                    <!-- AI Provider Indicator -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="4" Padding="8,4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon x:ConnectionId='26' x:Name="ProviderIcon" FontSize="12"/>
                            <TextBlock x:ConnectionId='27' x:Name="ProviderText" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse x:ConnectionId='24' x:Name="StatusIndicator" Width="8" Height="8" VerticalAlignment="Center"/>
                        <TextBlock x:ConnectionId='25' x:Name="StatusText" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <!-- History Counter -->
                    <StackPanel x:ConnectionId='21' x:Name="HistoryPanel" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                        <TextBlock x:ConnectionId='22' x:Name="HistoryCount" FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <HyperlinkButton x:ConnectionId='23' Content="Clear History" FontSize="11"                           />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid x:ConnectionId='2' Grid.Row="1" x:Name="MainContent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Input Area -->
            <Grid Grid.Column="0" Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="What would you like me to do?" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                <Border Grid.Row="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Margin="0,0,0,12">
                    <Grid>
                        <TextBox x:ConnectionId='20' x:Name="UserInputBox" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 PlaceholderText="Type your request here... e.g., &quot;Move all .pdf files from Downloads to Documents&quot;"
                                 FontFamily="Consolas"
                                 Padding="12"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12">
                    <Button x:ConnectionId='15'                    >
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='16' x:Name="ExecuteButton" Style="{StaticResource AccentButtonStyle}"                       HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing x:ConnectionId='17' x:Name="LoadingRing" Width="16" Height="16" IsActive="False" Visibility="Collapsed"/>
                            <FontIcon x:ConnectionId='18' x:Name="ExecuteIcon" Glyph="&#xE768;" FontSize="14"/>
                            <TextBlock x:ConnectionId='19' x:Name="ExecuteText" Text="Execute"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Divider -->
            <Border Grid.Column="1" Width="1" Background="{ThemeResource CardStrokeColorDefaultBrush}"/>

            <!-- Output Area -->
            <Grid Grid.Column="2" Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Generated Code" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:ConnectionId='5' x:Name="OutputPanel" Spacing="12">
                        <!-- Empty state -->
                        <StackPanel x:ConnectionId='6' x:Name="EmptyState" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16" Padding="0,60,0,0">
                            <FontIcon Glyph="&#xE756;" FontSize="48" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBlock Text="No code generated yet" FontSize="18" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock x:ConnectionId='14' x:Name="EmptyStateMessage" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Operation Description -->
                        <StackPanel x:ConnectionId='7' x:Name="OperationPanel" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="Operation:" FontSize="14" FontWeight="Medium"/>
                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" Opacity="0.1" CornerRadius="6" Padding="12">
                                <TextBlock x:ConnectionId='13' x:Name="OperationText" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Generated Code -->
                        <StackPanel x:ConnectionId='8' x:Name="CodePanel" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="Python Code:" FontSize="14" FontWeight="Medium"/>
                            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="6" Padding="12" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                <TextBlock x:ConnectionId='12' x:Name="CodeText" FontFamily="Consolas" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>

                        <!-- Execution Result -->
                        <StackPanel x:ConnectionId='9' x:Name="ResultPanel" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="Result:" FontSize="14" FontWeight="Medium"/>
                            <Border x:ConnectionId='10' x:Name="ResultBorder" CornerRadius="6" Padding="12">
                                <TextBlock x:ConnectionId='11' x:Name="ResultText" FontFamily="Consolas" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Confirmation Dialog -->
        <ContentDialog x:ConnectionId='3' x:Name="ConfirmDialog"
                       Title="Confirm Operation"
                       PrimaryButtonText="Execute"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary"
                                                                            >
            <StackPanel Spacing="12">
                <TextBlock Text="Are you sure you want to execute this operation?" TextWrapping="Wrap"/>
                <TextBlock x:ConnectionId='4' x:Name="ConfirmOperationText" FontWeight="SemiBold" TextWrapping="Wrap"/>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Page>

